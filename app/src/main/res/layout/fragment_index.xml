<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dreamspace.superman.UI.Fragment.Drawer.IndexFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.dreamspace.superman.UI.View.smartlayout.SmartTabLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@color/select_tab_color"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorColor="@color/navi_color"
            app:stl_indicatorThickness="3dp"
            app:stl_indicatorCornerRadius="2dp"
            app:stl_dividerColor="@android:color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_underlineColor="@android:color/transparent"
            app:stl_defaultTabTextColor="@android:color/white"
            app:stl_defaultTabTextSize="14sp"
            app:stl_defaultTabTextHorizontalPadding="20dp"/>

        <ImageView
            android:id="@+id/choose_classify"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@color/select_tab_color"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/select_classify_ig" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_bg" />

</LinearLayout>
